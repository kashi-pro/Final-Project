<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:backgroundTint="#40C4FF"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/cardInnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:background="#40C4FF">

        <ImageView
            android:id="@+id/tablePicPlace"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/indoor_table_1"/>

        <TextView
            android:id="@+id/tableNamePlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luxury Indoor Table"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/numGuestPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 Guests"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:textSize="15sp"
                android:textColor="#40C4FF"
                android:drawableLeft="@drawable/num_guests_icon"
                android:backgroundTint="@color/white"
                android:background="@drawable/table_property_style"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/locationPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indoor"
                android:layout_marginTop="10dp"
                android:layout_marginStart="13dp"
                android:textSize="15sp"
                android:textColor="#40C4FF"
                android:drawableLeft="@drawable/indoor_icon"
                android:backgroundTint="@color/white"
                android:background="@drawable/table_property_style"
                android:padding="5dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>