<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreen"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#40C4FF"
        android:textSize="25sp"
        android:gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="@string/profile"
        android:textColor="#40C4FF"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal"/>

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/profileImageField"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/dummy_user_pic"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kashan Babar"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/emailField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Email: kashanbabar5@gmail.com"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dobField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Date of Birth: 08-08-1999"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/phoneField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Phone #: 03224982068"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/input_round_border"
        android:backgroundTint="#40C4FF"
        android:text="Sign out"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:backgroundTint="#40C4FF"/>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/input_round_border"
        android:text="Delete Account"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="#FF5252" />

